@{
    ViewData["Title"] = "Create / Edit Page";
}
@model SimpleExpenseTracker.Models.ExpenseModel

<div class="text-center">
    <h1 class="display-4">Create or Edit Expenses</h1>
</div>
<form asp-action="CreateEditExpenseForm" asp-controller="Expense">
    <label class="mt-4">Id</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Id" />
    <label class="mt-4">PHP</label>
    <input class="form-control" type="number" placeholder="0.00" asp-for="Value" />
    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="0" asp-for="Description" />

    <button class="btn btn-primary mt-4" type="submit">Submit</button>
</form>
